{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS", // Обратите внимание на CommonJS, чтобы Jest мог правильно работать
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "baseUrl": "src",
    "paths": {
      "@controllers": [
        "controllers/index"
      ],
      "@helpers": [
        "helpers/index"
      ],
      "@interfaces": [
        "interfaces/index"
      ],
      "@middlewares": [
        "middlewares/index"
      ],
      "@services": [
        "services/index"
      ],
      "@swagger": [
        "swagger/index"
      ],
      "@queries": [
        "queries/index"
      ],
      "@routes": [
        "routes/index"
      ],
      "@data": [
        "data/index"
      ],
      "@tables": [
        "tables/index"
      ]
    },
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}